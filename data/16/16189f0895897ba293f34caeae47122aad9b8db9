(<span class="string">&#8220;A-&lt;right&gt;&#8221;</span> . org-demote-subtree)<br />
(<span class="string">&#8220;A-&lt;up&gt;&#8221;</span> . org-move-subtree-up)<br />
(<span class="string">&#8220;A-@&#8221;</span> . org-mark-subtree)<br />
(<span class="string">&#8220;A-RET&#8221;</span> . org-return) <span class="comment-delimiter">; </span><span class="comment">when using Scimax&#8217;s version<br />
</span> (<span class="string">&#8220;A-S-&lt;left&gt;&#8221;</span> . org-do-promote)<br />
(<span class="string">&#8220;A-S-&lt;right&gt;&#8221;</span> . org-do-demote)<br />
(<span class="string">&#8220;A-S-b&#8221;</span> . org-backward-heading-same-level)<br />
