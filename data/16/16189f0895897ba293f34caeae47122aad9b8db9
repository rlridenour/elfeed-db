(<span class="string">&#8220;A&#8211;&#8220;</span> . org-subscript-region-or-point)<br />
(<span class="string">&#8220;A-&lt;return&gt;&#8221;</span> . org-return) <span class="comment-delimiter">; </span><span class="comment">be able to do a standard org-return<br />
</span> (<span class="string">&#8220;A-=&#8221;</span> . org-superscript-region-or-point)<br />
(<span class="string">&#8220;A-\&#8221;&#8221;</span> . org-double-quote-region-or-point)<br />
(<span class="string">&#8220;A-*&#8221;</span> . org-toggle-heading)<br />
(<span class="string">&#8220;A-&lt;&#8220;</span> . org-insert-structure-template)<br />
(<span class="string">&#8220;A-.&#8221;</span> . org-time-stamp-inactive)<br />
(<span class="string">&#8220;A-,&#8221;</span> . org-time-stamp)<br />
(<span class="string">&#8220;A-/&#8221;</span> . org-sparse-tree)<br />
