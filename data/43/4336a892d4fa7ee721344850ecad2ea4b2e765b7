</span></span><span style="display:flex;"><span>  names <span style="color:#333">&lt;-</span> <span style="color:#06b;font-weight:bold">readLines</span>(<span style="background-color:#fff0f0">&#34;https://projecteuler.net/project/resources/p022_names.txt&#34;</span>,
</span></span><span style="display:flex;"><span>                     warn <span style="color:#333">=</span><span style="color:#080;font-weight:bold">FALSE</span>)
</span></span><span style="display:flex;"><span>  names <span style="color:#333">&lt;-</span> <span style="color:#06b;font-weight:bold">unlist</span>(<span style="color:#06b;font-weight:bold">strsplit</span>(names, <span style="background-color:#fff0f0">&#34;,&#34;</span>))
</span></span><span style="display:flex;"><span>  names <span style="color:#333">&lt;-</span> <span style="color:#06b;font-weight:bold">gsub</span>(<span style="background-color:#fff0f0">&#34;[[:punct:]]&#34;</span>, <span style="background-color:#fff0f0">&#34;&#34;</span>, names)
</span></span><span style="display:flex;"><span>  names <span style="color:#333">&lt;-</span> <span style="color:#06b;font-weight:bold">sort</span>(names)
</span></span><span style="display:flex;"><span>
</span></span><span style="display:flex;"><span>  <span style="color:#888"># Total Name scores</span>
</span></span><span style="display:flex;"><span>  answer <span style="color:#333">&lt;-</span> <span style="color:#60e;font-weight:bold">0</span>
</span></span><span style="display:flex;"><span>  <span style="color:#080;font-weight:bold">for</span> (i <span style="color:#080;font-weight:bold">in</span> names) {
</span></span><span style="display:flex;"><span>      value <span style="color:#333">&lt;-</span> <span style="color:#06b;font-weight:bold">sum</span>(<span style="color:#06b;font-weight:bold">sapply</span>(<span style="color:#06b;font-weight:bold">unlist</span>(<span style="color:#06b;font-weight:bold">strsplit</span>(i, <span style="background-color:#fff0f0">&#34;&#34;</span>)),
</span></span><span style="display:flex;"><span>                   <span style="color:#080;font-weight:bold">function</span>(x) <span style="color:#06b;font-weight:bold">as.numeric</span>(<span style="color:#06b;font-weight:bold">charToRaw</span>(x)) <span style="color:#333">-</span> <span style="color:#60e;font-weight:bold">64</span>))
</span></span><span style="display:flex;"><span>      value <span style="color:#333">&lt;-</span> value <span style="color:#333">*</span> <span style="color:#06b;font-weight:bold">which</span>(names<span style="color:#333">==</span>i)
</span></span><span style="display:flex;"><span>      answer <span style="color:#333">&lt;-</span> answer <span style="color:#333">+</span> value
</span></span><span style="display:flex;"><span>  }
</span></span><span style="display:flex;"><span>  <span style="color:#06b;font-weight:bold">print</span>(answer)</span></span></code></pre></div>
