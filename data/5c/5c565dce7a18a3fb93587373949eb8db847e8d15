<span class="p">(</span><span class="nv">keymap-global-set</span><span class="w"> </span><span class="s">&quot;C-&lt;kp-0&gt;&quot;</span><span class="w"> </span><span class="nf">#&#39;</span><span class="nv">ace-select-window</span><span class="p">)</span>
<span class="p">(</span><span class="nv">keymap-global-set</span><span class="w"> </span><span class="s">&quot;C-&lt;kp-divide&gt;&quot;</span><span class="w"> </span><span class="nf">#&#39;</span><span class="nv">transpose-frame</span><span class="p">)</span>
