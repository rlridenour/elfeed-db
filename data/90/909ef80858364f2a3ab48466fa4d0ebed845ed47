</span></span><span style="display:flex;"><span>    <span style="color:#080;font-weight:bold">if</span> (n <span style="color:#333">==</span> <span style="color:#06b;font-weight:bold">sum</span>(<span style="color:#06b;font-weight:bold">divisors</span>(div.sum)) <span style="color:#333">-</span> div.sum <span style="color:#333">&amp;</span> n <span style="color:#333">!=</span> div.sum) {
