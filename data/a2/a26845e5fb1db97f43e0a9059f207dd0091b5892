</span></span><span style="display:flex;"><span>  itinerary
</span></span><span style="display:flex;"><span>  coords <span style="color:#333">&lt;-</span> <span style="color:#06b;font-weight:bold">mapproject</span>(itinerary<span style="color:#333">$</span>lon, itinerary<span style="color:#333">$</span>lat, <span style="background-color:#fff0f0">&#34;azequidistant&#34;</span>,
</span></span><span style="display:flex;"><span>                       orientation <span style="color:#333">=</span> <span style="color:#06b;font-weight:bold">c</span>(<span style="color:#60e;font-weight:bold">90</span>, <span style="color:#60e;font-weight:bold">0</span>, <span style="color:#60e;font-weight:bold">270</span>))
</span></span><span style="display:flex;"><span>  coords <span style="color:#333">&lt;-</span> <span style="color:#06b;font-weight:bold">tibble</span>(x <span style="color:#333">=</span> coords<span style="color:#333">$</span>x <span style="color:#333">*</span> r, y <span style="color:#333">=</span> coords<span style="color:#333">$</span>y <span style="color:#333">*</span> r)
</span></span><span style="display:flex;"><span>  <span style="color:#06b;font-weight:bold">sum</span>(<span style="color:#06b;font-weight:bold">sqrt</span>(<span style="color:#06b;font-weight:bold">diff</span>(coords<span style="color:#333">$</span>x)^2 <span style="color:#333">+</span> <span style="color:#06b;font-weight:bold">diff</span>(coords<span style="color:#333">$</span>y)^2))
</span></span><span style="display:flex;"><span>
</span></span><span style="display:flex;"><span>  flatearth <span style="color:#333">+</span> 
</span></span><span style="display:flex;"><span>      <span style="color:#06b;font-weight:bold">geom_point</span>(data <span style="color:#333">=</span> coords, <span style="color:#06b;font-weight:bold">aes</span>(x, y), colour <span style="color:#333">=</span> <span style="background-color:#fff0f0">&#34;red&#34;</span>, size <span style="color:#333">=</span> <span style="color:#60e;font-weight:bold">4</span>) <span style="color:#333">+</span>
</span></span><span style="display:flex;"><span>      <span style="color:#06b;font-weight:bold">geom_path</span>(data <span style="color:#333">=</span> coords, <span style="color:#06b;font-weight:bold">aes</span>(x, y), colour <span style="color:#333">=</span> <span style="background-color:#fff0f0">&#34;red&#34;</span>, size <span style="color:#333">=</span> <span style="color:#60e;font-weight:bold">1</span>)</span></span></code></pre></div>
