</span></span><span style="display:flex;"><span>  nLattice <span style="color:#333">&lt;-</span> <span style="color:#60e;font-weight:bold">2</span>
</span></span><span style="display:flex;"><span>  lattice <span style="color:#333">=</span> <span style="color:#06b;font-weight:bold">matrix</span>(ncol <span style="color:#333">=</span> nLattice <span style="color:#333">+</span> <span style="color:#60e;font-weight:bold">1</span>, nrow <span style="color:#333">=</span> nLattice <span style="color:#333">+</span> <span style="color:#60e;font-weight:bold">1</span>)
</span></span><span style="display:flex;"><span>
</span></span><span style="display:flex;"><span>  <span style="color:#888"># Boundary conditions</span>
</span></span><span style="display:flex;"><span>  lattice[nLattice <span style="color:#333">+</span> <span style="color:#60e;font-weight:bold">1</span>, <span style="color:#333">-</span>(nLattice <span style="color:#333">+</span> <span style="color:#60e;font-weight:bold">1</span>)] <span style="color:#333">&lt;-</span> <span style="color:#60e;font-weight:bold">1</span>
</span></span><span style="display:flex;"><span>  lattice[<span style="color:#333">-</span>(nLattice <span style="color:#333">+</span> <span style="color:#60e;font-weight:bold">1</span>), nLattice <span style="color:#333">+</span> <span style="color:#60e;font-weight:bold">1</span>] <span style="color:#333">&lt;-</span> <span style="color:#60e;font-weight:bold">1</span>
</span></span><span style="display:flex;"><span>
</span></span><span style="display:flex;"><span>  <span style="color:#888"># Calculate Pathways</span>
</span></span><span style="display:flex;"><span>  <span style="color:#080;font-weight:bold">for</span> (i <span style="color:#080;font-weight:bold">in</span> nLattice<span style="color:#333">:</span><span style="color:#60e;font-weight:bold">1</span>) {
</span></span><span style="display:flex;"><span>      <span style="color:#080;font-weight:bold">for</span> (j <span style="color:#080;font-weight:bold">in</span> nLattice<span style="color:#333">:</span><span style="color:#60e;font-weight:bold">1</span>) {
</span></span><span style="display:flex;"><span>          lattice[i,j] <span style="color:#333">&lt;-</span> lattice[i<span style="color:#60e;font-weight:bold">+1</span>, j] <span style="color:#333">+</span> lattice[i, j<span style="color:#60e;font-weight:bold">+1</span>]
</span></span><span style="display:flex;"><span>      }
</span></span><span style="display:flex;"><span>  }
</span></span><span style="display:flex;"><span>  answer <span style="color:#333">&lt;-</span> lattice[1,<span style="color:#60e;font-weight:bold">1</span>]
</span></span><span style="display:flex;"><span>  <span style="color:#06b;font-weight:bold">print</span>(answer)</span></span></code></pre></div>
