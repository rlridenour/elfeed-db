</span></span><span style="display:flex;"><span>                    ((<span style="color:#06b;font-weight:bold">member</span> <span style="color:#963">word</span> <span style="color:#333">&#39;</span>(<span style="background-color:#fff0f0">&#34;WE&#34;</span> <span style="background-color:#fff0f0">&#34;DAY&#34;</span> <span style="background-color:#fff0f0">&#34;HOW&#34;</span> <span style="background-color:#fff0f0">&#34;WHY&#34;</span> <span style="background-color:#fff0f0">&#34;NOW&#34;</span> <span style="background-color:#fff0f0">&#34;OLD&#34;</span>
</span></span><span style="display:flex;"><span>                                    <span style="background-color:#fff0f0">&#34;NEW&#34;</span> <span style="background-color:#fff0f0">&#34;MY&#34;</span> <span style="background-color:#fff0f0">&#34;TOO&#34;</span> <span style="background-color:#fff0f0">&#34;GOT&#34;</span> <span style="background-color:#fff0f0">&#34;GET&#34;</span> <span style="background-color:#fff0f0">&#34;THE&#34;</span>
</span></span><span style="display:flex;"><span>                                    <span style="background-color:#fff0f0">&#34;ONE&#34;</span> <span style="background-color:#fff0f0">&#34;DO&#34;</span> <span style="background-color:#fff0f0">&#34;YOU&#34;</span>))
</span></span><span style="display:flex;"><span>                     (<span style="color:#06b;font-weight:bold">capitalize</span> <span style="color:#963">word</span>))
</span></span><span style="display:flex;"><span>                    ((<span style="color:#06b;font-weight:bold">&gt;</span> (<span style="color:#06b;font-weight:bold">length</span> <span style="color:#963">word</span>) <span style="color:#00d;font-weight:bold">3</span>) (<span style="color:#06b;font-weight:bold">capitalize</span> <span style="color:#963">word</span>))
</span></span><span style="display:flex;"><span>                    (<span style="color:#036;font-weight:bold">t</span> <span style="color:#963">word</span>)))
